rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Users can read their own profile and other users' basic info
      allow read: if request.auth != null;
      // Users can only update their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Communities collection
    match /communities/{communityId} {
      // Anyone can read community information
      allow read: if request.auth != null;
      // Only admins can modify communities (implemented via server-side functions)
      allow write: if false;
    }
    
    // Community members collection
    match /community_members/{membershipId} {
      // Users can read membership info
      allow read: if request.auth != null;
      // Users can only manage their own membership
      allow write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Users can read messages in communities they're members of
      allow read: if request.auth != null;
      // Users can create messages
      allow create: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
      // Users can edit their own messages within 5 minutes
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.authorId &&
        resource.data.createdAt > (request.time - duration.value(5, 'm')) &&
        !resource.data.isEdited;
      // Users can delete their own messages
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
    }
    
    // Message votes collection
    match /message_votes/{voteId} {
      // Users can read vote information
      allow read: if request.auth != null;
      // Users can only manage their own votes
      allow write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Message views collection
    match /message_views/{viewId} {
      // Users can read view information
      allow read: if request.auth != null;
      // Users can only create their own views
      allow create: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // Message reports collection
    match /message_reports/{reportId} {
      // Only moderators and admins can read reports
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['moderator', 'admin'];
      // Users can create reports
      allow create: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      // Only moderators and admins can update reports
      allow update: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['moderator', 'admin'];
      allow delete: if false;
    }
  }
}
